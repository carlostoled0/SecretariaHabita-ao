
<!DOCTYPE html>
<html lang="pt-br">
<head>
  <meta charset="UTF-8">
  <title>Logs de Alterações</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <script src="https://cdn.tailwindcss.com"></script>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600&display=swap" rel="stylesheet">
  <style>body { font-family: 'Inter', sans-serif; }</style>
</head>
<body class="bg-gray-100 text-gray-800">
  <div class="max-w-5xl mx-auto p-6">
    <div class="bg-white rounded-2xl shadow-md p-6 mb-6 text-center">
      <h1 class="text-2xl font-bold text-gray-900">Logs de Alterações</h1>
      <p class="text-sm text-gray-500">Visualização exclusiva do administrador</p>
    </div>

    <div class="overflow-x-auto bg-white rounded-xl shadow">
      <table class="min-w-full text-sm">
        <thead class="bg-gray-100 text-gray-600">
          <tr>
            <th class="px-4 py-2">Data</th>
            <th class="px-4 py-2">Requerente</th>
            <th class="px-4 py-2">De</th>
            <th class="px-4 py-2">Para</th>
            <th class="px-4 py-2">Por</th>
          </tr>
        </thead>
        <tbody id="tabelaLogs"></tbody>
      </table>
    </div>
    <div class="text-center mt-6">
      <a href="index.html" class="text-sm text-blue-600 hover:underline">Voltar ao painel</a>
    </div>
  </div>

  <script>
    if (localStorage.getItem("tipo") !== "admin") {
      window.location.href = "login.html";
    }

    const tabela = document.getElementById("tabelaLogs");
    const logs = JSON.parse(localStorage.getItem("logs") || "[]");

    if (!logs || logs.length === 0) {
      tabela.innerHTML = '<tr><td colspan="5" class="text-center p-4">Nenhum log registrado.</td></tr>';
    } else {
      logs.reverse().forEach(log => {
        const tr = document.createElement("tr");
        tr.innerHTML = `
          <td class="px-4 py-2">${log.data}</td>
          <td class="px-4 py-2">${log.nome}</td>
          <td class="px-4 py-2">${log.de}</td>
          <td class="px-4 py-2">${log.para}</td>
          <td class="px-4 py-2">${log.por}</td>
        `;
        tabela.appendChild(tr);
      });
    }
  </script>
</body>
</html>
